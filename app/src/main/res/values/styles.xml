<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/default_text_outline</item>
        <item name="android:textColor">@color/material_on_background_emphasis_medium</item>
    </style>

    <style name = "selected_text_button" parent="text_button">
        <item name="android:background">@drawable/selected_text_outline</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>
</resources>